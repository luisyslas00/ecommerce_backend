{{#if admin}}
    <h2>Cuenta admin!</h2>
    <a href="/users">Usuarios</a>
    <a href="/realtimeproducts">Publicar productos</a>
{{else}}
    {{#if role}}
        <h2>Â¡Felicitaciones ya sos PREMIUM!</h2>
        <a href="/realtimeproducts">Publica tus productos</a>
        <form action="" id="formulario-baja" data-id="{{id}}">
            <button id="btn-enviar">DARSE DE BAJA</button>
        </form>
    {{else}}
        <h2>Pasate a Premium completando el formulario</h2>
